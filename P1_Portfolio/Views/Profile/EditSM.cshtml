@model P1_Portfolio.Models.SocialMedia 
@{
    ViewBag.Title = "EditSM";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>EditSM</h2>

<h2 class="mb-4">Skill updating page</h2>

<form method="post">
    @Html.HiddenFor(x => x.socialMediaID, new { @class = "form-control" })

    <label>Title</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>URL</label>
    @Html.TextBoxFor(x => x.URL, new { @class = "form-control" })
    <br />
    <label>Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Update Social Media</button>
</form>