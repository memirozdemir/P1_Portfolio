@model List<P1_Portfolio.Models.SocialMedia>
@{
    ViewBag.Title = "SocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

<h2 class="mb-4">My Social Medias</h2>
<div style="max-height:365px; overflow-y:auto;">
    <table class=" table table-bordered">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>URL</th>
            <th>Icon</th>
            <th>Status</th>
            <th>Edit</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.socialMediaID</td>
                <td>@item.Title</td>
                <td>@item.URL</td>
                <td><i class="@item.Icon"></i></td>
                @if (item.Status == false)
                {
                    <td><a href="/Profile/SMediaStatusChangeToTrue/@item.socialMediaID" class="btn btn-outline-success">Activate</a></td>
                }
                else
                {
                    <td><a href="/Profile/SMediaStatusChangeToFalse/@item.socialMediaID" class="btn btn-success">Deactivate</a></td>
                }
                <td><a href="/Profile/EditSM/@item.socialMediaID" class="btn btn-warning">Edit</a></td>
            </tr>
        }

    </table>
</div>

