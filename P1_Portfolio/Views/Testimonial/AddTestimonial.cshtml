
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Add Testimonial</h2>

<form method="post">
    <label>Testimonial Name</label>
    <input type="text" name="name" class="form-control" />
    <br />
    <label>Testimonial Title</label>
    <input type="text" name="title" class="form-control" />
    <br />
    <label>Testimonial Comment</label>
    <input type="text" name="comment" class="form-control" />
    <br />
    <label>Testimonial Photo</label>
    <input type="text" name="imageUrl" class="form-control" />
    <br />
    <button class="btn btn-info">Add testimonial</button>
</form>

