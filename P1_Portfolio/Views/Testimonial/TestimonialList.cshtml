@model List<P1_Portfolio.Models.Testimonial>

@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Testimonial List</h2>
<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Title</th>
        <th>Comment</th>
        <th>Photo</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.testimonialID</td>
            <td>@item.name</td>
            <td>@item.title</td>
            <td>@item.comment</td>
            <td><img src="@item.imageUrl" width="200" /></td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.testimonialID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.testimonialID" class="btn btn-success">Update</a></td>
        </tr>
    }

</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-info">Create new testimonial</a>

