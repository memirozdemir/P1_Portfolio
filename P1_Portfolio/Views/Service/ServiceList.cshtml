@model List<P1_Portfolio.Models.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Service List</h2>
<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.serviceID</td>
            <td>@item.title</td>
            <td>@item.description</td>
            <td><a href="/Service/DeleteService/@item.serviceID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Service/UpdateService/@item.serviceID" class="btn btn-success">Edit</a></td>
        </tr>
    }

</table>
<a href="/Service/AddService/" class="btn btn-info">Add new service</a>

