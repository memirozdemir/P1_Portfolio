@model List<P1_Portfolio.Models.Work>
@{
    ViewBag.Title = "WorkList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Work List</h2>
<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Desription</th>
        <th>Picture</th>
        <th>Github</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.workID</td>
            <td>@item.title</td>
            <td>@item.description</td>
            <td><img src="@item.imageurl" width="200" /></td>
            <td>@item.githuburl</td>
            <td><a href="/Work/DeleteWork/@item.workID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Work/UpdateWork/@item.workID" class="btn btn-success">Update</a></td>
        </tr>
    }

</table>
<a href="/Work/AddWork/" class="btn btn-info">Add new work</a>


